.custom-wrap {
  width: 100%;
  padding: 0 30rpx;
}

.custom-list {
  width: 100%;
  height: 72rpx;
  font-size: 28rpx;

  display: flex;
  align-items: center;
}

.custom-list .box {
  width: 200rpx;
  display: flex;
  align-items: center;
}

.color-box {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.get-random {
  font-size: 24rpx;
  font-weight: bold;
  color: rgb(15, 57, 146);
}

.fan-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
}



button {
  margin-top: 60rpx;
  background: rgb(19, 95, 146);
  color: #fff;
}